<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".book_info_activity">

    <!-- Linear layout including the wohle page -->
    <LinearLayout
        android:orientation="vertical"
        android:id="@+id/book_info_page"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <!-- Linear layout for the top half of the page including picture -->
        <LinearLayout
            android:gravity="center"
            android:id="@+id/book_image_linear_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/book_image"
                android:src="@drawable/example"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
        </LinearLayout>

        <!-- linear layout for the book description -->
        <LinearLayout
            android:id="@+id/book_description_linear_layout"
            android:gravity="center"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/book_description"
                android:text="Default description\nTitle\ngenrdddddddddddddddddddddddddddddddddddddddde"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/buton_toShelf_linear_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center">

            <Button
                android:id="@+id/toShelf"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="confirm"/>
        </LinearLayout>

    </LinearLayout>

</android.support.constraint.ConstraintLayout>